<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhy.listen.dao.UserDAO">

	<resultMap id="userMap" type="com.zhy.listen.bean.User">
		<result property="id" column="id" />
		<result property="userName" column="user_name" />
		<result property="passWord" column="pass_word" />
		<result property="birthday" column="birthday" />
		<result property="sex" column="sex" />
		<result property="userNick" column="user_nick" />
		<result property="userImg" column="user_img" />
		<result property="isCompany" column="is_company" />
		<result property="province" column="province" />
		<result property="city" column="city" />
		<result property="introduction" column="introduction" />
		<result property="mobile" column="mobile" />
		<result property="email" column="email" />
		<result property="regTime" column="reg_time" />
		<result property="modifyTime" column="modify_time" />
		<result property="userPoint" column="user_point" />
		<result property="userLevel" column="user_level" />
		<result property="isValid" column="is_valid" />
	</resultMap>

	<!-- 验证该用户名是否可用 -->
	<select id="sel_by_username" parameterType="java.lang.String"
		resultMap="userMap">
		SELECT * FROM `user` WHERE user_name=#{userName}
	</select>

	<!-- 根据用户名密码登陆 -->
	<select id="sel_by_name_pass" parameterType="user"
		resultMap="userMap">
		SELECT * FROM `user` WHERE user_name = #{userName} AND pass_word
		= #{passWord} AND is_valid = true
	</select>

	<!-- 根据用户ID查询 -->
	<select id="sel_by_id" parameterType="java.lang.Long"
		resultMap="userMap">
		SELECT * FROM `user` WHERE id = #{id}
	</select>

	<!-- 根据用户昵称查询 -->
	<select id="sel_by_usernick" parameterType="java.lang.String"
		resultMap="userMap">
		SELECT * FROM `user` WHERE user_nick like #{userNick}
	</select>

	<!-- 随即查询用户 -->
	<select id="sel_by_userrandom" parameterType="user"
		resultMap="userMap">
		SELECT * FROM `user` WHERE
		<![CDATA[ id <> #{id} ]]>
		ORDER BY rand() LIMIT #{pageSize}
	</select>

	<!-- 查询用户id及昵称 -->
	<select id="sel_by_usernameAndId" resultMap="userMap">
		SELECT id, user_nick FROM `user`
	</select>

	<!-- 注册用户 -->
	<insert id="sav_by_user" parameterType="user">
		INSERT INTO `user` (user_name,pass_word,reg_time
		<if test="birthday != null">,birthday</if>
		<if test="sex != null">,sex</if>
		<if test="userNick != null">,user_nick</if>
		<if test="userImg != null">,user_img</if>
		<if test="isCompany != null">,is_company</if>
		<if test="introduction != null">,introduction</if>
		<if test="province != null">,province</if>
		<if test="city != null">,city</if>
		<if test="mobile != null">,mobile</if>
		<if test="email != null">,email</if>
		<if test="isValid != null">,is_valid</if>
		<![CDATA[ 
        ) VALUES ( 
    	]]>
		#{userName}, #{passWord},#{regTime}
		<if test="birthday != null">,#{birthday}</if>
		<if test="sex != null">,#{sex}</if>
		<if test="userNick != null">,#{userNick}</if>
		<if test="userImg != null">,#{userImg}</if>
		<if test="isCompany != null">,#{isCompany}</if>
		<if test="introduction != null">,#{introduction}</if>
		<if test="province != null">,#{province}</if>
		<if test="city != null">,#{city}</if>
		<if test="mobile != null">,#{mobile}</if>
		<if test="email != null">,#{email}</if>
		<if test="isValid != null">,#{isValid}</if>
		<![CDATA[ 
        ) 
    	]]>
		<selectKey resultType="java.lang.Long" keyProperty="id">
			SELECT id FROM `user` WHERE user_name = #{userName} AND
			pass_word = #{passWord}
		</selectKey>
	</insert>

	<!-- 修改用户状态 -->
	<update id="upd_by_userIsValid" parameterType="user">
		UPDATE `user` SET is_valid=#{isValid} WHERE id=#{id}
	</update>

	<!-- 修改用户信息 -->
	<update id="upd_by_userId" parameterType="user">
		UPDATE `user`
		<set>
			<if test="passWord != null">pass_word=#{passWord},</if>
			<if test="sex != null">sex=#{sex},</if>
			<if test="userNick != null">user_nick=#{userNick},</if>
			<if test="userImg != null">user_img=#{userImg},</if>
			<if test="birthday != null">birthday=#{birthday},</if>
			<if test="isCompany != null">is_company=#{isCompany},</if>
			<if test="province != null">province=#{province},</if>
			<if test="city != null">city=#{city},</if>
			<if test="introduction != null">
				introduction=#{introduction},
			</if>
			<if test="mobile != null">mobile=#{mobile},</if>
			<if test="email != null">email=#{email},</if>
		</set>
		WHERE id=#{id}
	</update>

	<!-- 更新用户等级及积分 -->
	<update id="upd_userpointAndLevel" parameterType="java.util.Map">
		UPDATE `user` SET user_level=#{userLevel},
		user_point=#{userPoint} WHERE ID=#{userId}
	</update>
	
	<!-- 查询一批用户 -->
	<select id="sel_byIds" parameterType="java.lang.Long">
		SELECT * FROM `user` WHERE id IN
		<foreach collection="ids" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</select>
</mapper>
